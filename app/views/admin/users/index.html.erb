<div class="page-header">
  <h1>Usuarios</h1>
</div>

<% if current_user.admin? %>
<div class="pull-right">
  <%= link_to "Nuevo Usuario", new_admin_user_path, class: "btn btn-primary" %>
</div>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Email</th>
      <th>Rol</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, admin_user_path(user) %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
				<% if current_user.admin? %>
          <%= link_to "Editar", edit_admin_user_path(user), class: 'btn btn-default btn-xs' %>
					<%= link_to "Eliminar", admin_user_path(user), method: :delete, data: { confirm: "¿Estás seguro?"}, class: 'btn btn-xs btn-danger' %>
				<% else %>
					&nbsp;
				<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

